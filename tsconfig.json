{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "declaration": false,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}